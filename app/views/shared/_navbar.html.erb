<div class="navbar navbar-expand-sm navbar-light navbar-poe">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'poetrade.png' %> Cadiro
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "My searches", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "How to use Cadiro", pte_integration_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <i class="user-icon fas fa-users-cog dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
